<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.karen.hikerswatch.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/latitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Latitude: "
        android:textColor="#cc00cc"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/longitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/latitudeTextView"
        android:layout_below="@+id/latitudeTextView"
        android:layout_marginTop="20dp"
        android:text="Longitude:"
        android:textColor="#cc00cc"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/accuracyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/longitudeTextView"
        android:layout_below="@+id/longitudeTextView"
        android:layout_marginTop="20dp"
        android:text="Accuracy:"
        android:textColor="#cc00cc"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/altitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/accuracyTextView"
        android:layout_below="@+id/accuracyTextView"
        android:layout_marginTop="20dp"
        android:text="Altitude: "
        android:textColor="#cc00cc"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/altitudeTextView"
        android:layout_below="@+id/altitudeTextView"
        android:layout_marginTop="20dp"
        android:text="Address: "
        android:textColor="#cc00cc"
        android:textSize="18sp" />

</RelativeLayout>
